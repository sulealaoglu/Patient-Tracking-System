@{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    @model Patient
    var ph = Model.pharmacies;
    <div class="jumbotron">
        <h1 color="blue" class="display-4">Hello, @Model.name!</h1>
        <p class="lead">You can view the medicine prescribed by your doctor and our contracted pharmacies where this medicine is available.</p>
        <hr class="my-4">
      
    </div>
 <div class="row">
     <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                <h5 style="color:seagreen" class="card-title">
                    Treatment suggested by your doctor:
                </h5>
                <p class="card-text"> @Model.treatment</p>

            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 style="color:seagreen" class="card-title">
                    Drug prescribed by your doctor:
                </h5>
                <p class="card-text"> @Model.pharmacies[0].DrugName</p>

            </div>
        </div>
    </div>
    </div>


   
         
    



<br></br>

<h2>Available Pharmacies:</h2>
<tr>

    @foreach (var p in ph)
    {
        <li>@p.PharmacyName , @p.Count, <a href="/Patient/Pharmacies">Info</a></li>


    }
</tr>
}