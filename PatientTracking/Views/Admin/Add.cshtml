@model Patient

<h1>Add Patient</h1>
<form method="post" action="Add" class="mt-5">

  <div class="mb-3">
    <label for="" class="form-label">Birthdate</label>
    <input type="date" class="form-control" asp-for="bdate">
  </div>

    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input asp-for="name" type="text" class="form-control">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Surname</label>
        <input asp-for="surname" type="text" class="form-control">
    </div>
  

    <div class="mb-3">
        <label for="" class="form-label">Treatment</label>
        <input asp-for="treatment" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Drug</label>
        <input asp-for="drug" type="text" class="form-control">
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
